{
  "manifest_version": 3,
  "name": "Music Translator - YouTube Music",
  "version": "1.0.0",
  "description": "Real-time lyrics translation for YouTube Music",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "https://fuzzy-space-giggle-ggvp59v599hv9gx-3001.app.github.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}